extends layout

block mainContent
      article.post.span        
        h1 Manutenção posts    
        form(name="post-edit", action="/post", method="post")
          .form-group
            label Titulo
            input(type="text", name="title", value=post.title)            
          .form-group
            label Link
            input(type="text", name="permalink", value=post.permalink)
            span=errorPermalink
          .form-group
            label Imagem
            input(type="text", name="image", value=post.image)
          .form-group
            label Resumo
            input(type="text", name="excerpt", value=post.excerpt)
          .form-group
            label Conteudo
            textarea(name="content")=post.content
          .form-group
            label Categorias (Separado por virgula)
            input(type="text", name="categories", value=post.categories)
          .form-group
            label Tags (Separado por virgula)
            input(type="text", name="tags", value=post.tags)
          input.btn.btn-primary(type="submit", name="Salvar", value="Salvar")
